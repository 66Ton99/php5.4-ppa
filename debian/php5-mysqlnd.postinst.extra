if [ "$1" = "configure" ]; then
    ucf /usr/share/php5/mysqlnd/mysqlnd.ini /etc/php5/mods-available/mysqlnd.ini
fi

if [ -x /usr/bin/dpkg-maintscript-helper ]; then
    dpkg-maintscript-helper mv_conffile \
	/etc/php5/conf.d/10-mysqlnd.ini \
	/etc/php5/mods-available/mysqlnd.ini \
	5.4.0~rc6-1 -- "$@";
fi
